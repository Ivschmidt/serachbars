             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="700"
             x:Name="root">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <TextBlock Text="NomBar :" FontSize="40" Style="{StaticResource STextBlock}"/>
                <WrapPanel>
                    <TextBlock Text="note" FontSize="20" Style="{StaticResource STextBlock}"/>
                    <TextBlock Text=".../5" FontSize="20" Style="{StaticResource STextBlock}"/>
                </WrapPanel>
                <WrapPanel>
                    <TextBlock Text="Adresse :" FontSize="20" Style="{StaticResource STextBlock}"/>
                    <TextBlock Text="un adresse" FontSize="20" Style="{StaticResource STextBlock}"/>
                </WrapPanel>
                <WrapPanel>
                    <TextBlock Text="Numero :" FontSize="20" Style="{StaticResource STextBlock}"/>
                    <TextBlock Text="0000000000" FontSize="20" Style="{StaticResource STextBlock}"/>
                </WrapPanel>
                <WrapPanel>
                    <TextBlock Text="Boisson :" FontSize="20" Style="{StaticResource STextBlock}"/>
                    <TextBlock Text="liste de boissons" FontSize="20" Style="{StaticResource STextBlock}"/>
                </WrapPanel>
            </StackPanel>
            <map:Map Grid.Column="1"  Margin="10" ZoomLevel="10" CredentialsProvider="GPTQ32UjcuKIjSoK2k67~zsm5A0WorhEOdGW-14U77Q~AlSPzDbJPec2cvWGOg7TwCQLPRorLVoO3z2Sh1p7FR6Qd4Uu9rFdCLDAE7WWFLuY" RenderTransformOrigin="1.819,0.485">
                <map:Map.Center>
                    <map:Location Latitude="45.7833" Longitude="3.0833" />
                </map:Map.Center>
            </map:Map>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <WrapPanel Grid.Column="0" HorizontalAlignment="Center">
                <Button Content="Prec" Width="30" Height="20" />
                <Image Source="Images/photoprofil.jpg" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Button Content="Suiv" Width="30" Height="20" />
            </WrapPanel>
            <StackPanel Grid.Column="1" Margin="0 0 10 0">
                <TextBlock Text="Avis clients :" FontSize="30" Style="{StaticResource STextBlock}"/>
                <ListBox Height="200">
                    <ListBoxItem Content="avis1"/>
                    <ListBoxItem Content="avis2"/>
                    <ListBoxItem Content="avis3"/>
                    <ListBoxItem Content="avis4"/>
                </ListBox>
                <Button Content="Poster un avis" Margin="0 5 0 5"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>

<Window x:Class="SearchBars.SubscribeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SubscribeWindow" Height="500" Width="350" ResizeMode="NoResize" Background="#808893">
    <Window.Resources>
        <Style x:Key="textblockset">
            <Setter Property="TextBlock.Margin" Value="5 0 0 0"/>
            <Setter Property="TextBlock.VerticalAlignment" Value="Center"/>
            <Setter Property="TextBlock.Foreground" Value="#B5E655"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="35"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="100"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Inscription : " Grid.Row="0" Grid.Column="0" Style="{StaticResource textblockset}" FontSize="20"/>
        <TextBlock Text="Pseudo : " Grid.Row="1" Grid.Column="0" Style="{StaticResource textblockset}"/>
        <TextBox Grid.Row="1" Grid.Column="1" Width="auto" Height="20px" Margin="0 0 5 0"/>
        <TextBlock Text="Sexe : " Grid.Row="2" Grid.Column="0" Style="{StaticResource textblockset}"/>
        <WrapPanel Grid.Row="2" Grid.Column="1" >
            <RadioButton Content="F" Foreground="#B5E655" Margin="5"/>
            <RadioButton Content="M" Foreground="#B5E655" Margin="5"/>
        </WrapPanel>
        <TextBlock Text="Nom :" Grid.Row="3" Grid.Column="0" Style="{StaticResource textblockset}"/>
        <TextBox Grid.Row="3" Grid.Column="1" Width="auto" Height="20px" Margin="0 0 5 0"/>
        <TextBlock Text="Prenom : " Grid.Row="4" Grid.Column="0" Style="{StaticResource textblockset}"/>
        <TextBox Grid.Row="4" Grid.Column="1" Width="auto" Height="20px" Margin="0 0 5 0"/>
        <TextBlock Text="Mot de passe :" Grid.Column="0" Grid.Row="5" Style="{StaticResource textblockset}"/>
        <TextBox Grid.Column="1" Grid.Row="5" Width="auto" Height="20" Margin="0 0 5 0"/>
        <TextBlock Text="Resaisir mot de passe :" Grid.Column="0" Grid.Row="6" Style="{StaticResource textblockset}"/>
        <TextBox Grid.Column="1" Grid.Row="6" Width="auto" Height="20" Margin="0 0 5 0"/>
        <TextBlock Text="Date de naissance : " Grid.Row="7" Grid.Column="0" Style="{StaticResource textblockset}"/>
        <WrapPanel Grid.Column="1" Grid.Row="7" HorizontalAlignment="Center">
            <ComboBox />
            <TextBlock Text="/" Foreground="#B5E655" Margin="10 0 10 0"/>
            <ComboBox/>
            <TextBlock Text="/" Foreground="#B5E655" Margin="10 0 10 0"/>
            <ComboBox/>
        </WrapPanel>
        <TextBlock Text="Numéro de téléphone : " Grid.Row="8" Grid.Column="0" Style="{StaticResource textblockset}"/>
        <TextBox Grid.Row="8" Grid.Column="1" Width="auto" Height="20px" Margin="0 0 5 0"/>
        <TextBlock Text="Ville : " Grid.Row="9" Grid.Column="0" Style="{StaticResource textblockset}"/>
        <TextBox Grid.Row="9" Grid.Column="1" Width="auto" Height="20px" Margin="0 0 5 0"/>
        <TextBlock Text="Boisson Préférée : " Grid.Row="10" Grid.Column="0" Style="{StaticResource textblockset}"/>   
        <ComboBox Grid.Column="1" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="10" VerticalAlignment="Top" Width="120"/>
        <Image Source="Images/photoprofil.jpg" Grid.Row="11" Grid.Column="0" Width="80" Height="80" Margin="10,10,10,10"/>
        <Button Content="Parcourir" Grid.Row="11" Grid.Column="1" Width="60" Height="20" Style="{StaticResource couleurBouton}"/>
        <Button Content="S'incrire" Grid.Row="12" Grid.Column="0" Margin="5" Style="{StaticResource couleurBouton}"/>
        <Button Content="Annuler" Grid.Row="12" Grid.Column="1" Margin="5" Style="{StaticResource couleurBouton}"/>
    </Grid>
</Window>
